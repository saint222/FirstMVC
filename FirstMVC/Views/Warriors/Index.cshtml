        <th>
            @Html.DisplayNameFor(model => model.HP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AttackStrength)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlockStrength)
        </th>
